@model IEnumerable<TrainModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Listing of All Trains";
}
<div>
    <div class="row pt-4">
        <div class="col-9">
            <h2 class="text-success">View All Trains</h2>
        </div>
        <div class="col-3">
            <a asp-controller="Train" asp-action="Add" class="btn btn-primary">Add New Train</a>
        </div>
    </div>
</div>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover table-striped" width="100%">
        <thead>
            <tr>
                <th>Departure Station</th>
                <th>Final Destination</th>
                <th>Train Length(railway carriages)</th>
                <th>Average Amount Of Carriages Per Day(railway carriages)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td width="20%">@i.DepartureStation</td>
                    <td width="20%">@i.FinalDestination</td>
                    <td width="20%">@i.TrainLength</td>
                    <td width="20%">@i.AverageAmountOfCarriagesPerDay</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Train" asp-action="TrainCalculate" asp-route-id="@i.TrainId" class="btn btn-primary mx-1">Calculate</a>
                            <a asp-controller="Train" asp-action="TrainUpdate" asp-route-id="@i.TrainId" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Train" asp-action="TrainDelete" asp-route-id="@i.TrainId" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center"><b>No Train Created Yet</b></p>
}

