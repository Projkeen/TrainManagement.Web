@model IEnumerable<TrainModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Listing of All Trains";
}
<div>
    <div class="row pt-4">
        <div class="col-5">
            <h2 class="text">Trains</h2>
        </div>
        <div class="col-3">
            <a asp-controller="Train" asp-action="Add" class="btn btn-secondary btn-lg">+ Add New Train</a>
        </div>
    </div>
</div>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover table-striped" style="text-align:center" width="100%">
        <thead>
            <tr>
                <th>Departure Station</th>
                <th>Final Destination</th>
                <th>Train length on this direction (in railway carriages)</th>
                <th>Maximum train weight on this direction</th>
                <th>Average amount of carriages per day on this direction</th>
                <th>Control Panel</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td width="20%">@i.DepartureStation</td>
                    <td width="20%">@i.FinalDestination</td>
                    <td width="20%">@i.TrainLength</td>
                    <td width="20%">@i.Weight</td>
                    <td width="20%">@i.AverageAmountPerDay</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Train" asp-action="TrainCalculate" asp-route-id="@i.TrainId" class="btn btn-outline-success">Calculate</a>
                            <a asp-controller="Train" asp-action="TrainEdit" asp-route-id="@i.TrainId" class="btn btn-outline-secondary">Edit</a>
                            <a asp-controller="Train" asp-action="TrainDelete" asp-route-id="@i.TrainId" class="btn btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center"><b>No trains in forecast</b></p>
}

