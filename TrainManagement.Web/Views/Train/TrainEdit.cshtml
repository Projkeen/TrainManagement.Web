@model TrainModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "View Train Details for Edit";
}

<form method="post" asp-action="Edit">
    <input asp-for="TrainId" hidden />
    <div class="border p-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Сhange train data</h2>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="DepartureStation">Start from</label>
                <input asp-for="DepartureStation" class="form-control" readonly/>
                <span asp-validation-for="DepartureStation" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="FinalDestination">Final destination</label>
                <input asp-for="FinalDestination" class="form-control" readonly/>
                <span asp-validation-for="FinalDestination" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="Weight">Maximum train weight on this direction</label>
                <input asp-for="Weight" class="form-control" readonly/>
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="TrainLength">Train length on this direction</label>
                <input asp-for="TrainLength" class="form-control" />
                <span asp-validation-for="TrainLength" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="EC">Including empty railway carriages</label>
                <input asp-for="EC" class="form-control" />
                <span asp-validation-for="EC" class="text-danger"></span>
            </div>
        </div>
        <br />        
        <div class="row">
            <div class="col-4">
                <label asp-for="AverageAmountPerDay">Amount of carriages per day</label>
                <input asp-for="AverageAmountPerDay" class="form-control" />
                <span asp-validation-for="AverageAmountPerDay" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="DC">Amount of railway carriages with dangerous cargo</label>
                <input asp-for="DC" class="form-control" />
                <span asp-validation-for="DC" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="w-12 btn-group" role="group">
            <a asp-action="Index" class="btn btn-outline-info mx-1">🡸 Back</a>
            <input type="submit" class="btn btn-outline-danger mx-1" value="✓ Save" />
        </div>
    </div>
</form>
