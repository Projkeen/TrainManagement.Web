@model TrainModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Calculation Results";
}
@{
    int amountOfTrains = Model.AverageAmountOfCarriagesPerDay / Model.TrainLength;
    int needRailwayCarriage = Model.TrainLength - (Model.AverageAmountOfCarriagesPerDay % Model.TrainLength);
    //var ts = TimeSpan.FromMinutes(Model.TrainLength * 2.4);
    TimeSpan ts = TimeSpan.FromMinutes(Model.TrainLength * 2.4);
    TimeSpan tvs = new TimeSpan(ts.Ticks - (ts.Ticks % 600000000));   
    var overtime = tvs * amountOfTrains;
}

<h3 style="text-align:center" class="pt-5">Calculation of the train formation time on this direction</h3>
<br/>

<table class="table table-bordered table-hover table-striped" style="text-align:center" width="100%">
    <thead style="height:auto; vertical-align: central;">
        <tr>
            <th>Departure Station</th>
            <th>Final Destination</th>
            <th>Train Length(railway carriages)</th>
            <th>Amount of trains</th>
            <th>Required number of railway carriages for a new train</th>
            <th>Time, required to form one train</th>
            <th>Time, required to form all trains for this direction</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td width="10%">@Model.DepartureStation</td>
            <td width="10%">@Model.FinalDestination</td>
            <td width="10%">@Model.TrainLength</td>
            <td width="10%">@amountOfTrains</td>
            <td width="20%">@needRailwayCarriage</td>
            <td width="20%">@tvs</td>
            <td width="20%">@overtime</td>
        </tr>

    </tbody>
</table>

<div class="w-12 btn-group" role="group">    
    <a asp-action="Index" class="btn btn-outline-info">🡸 Back</a>
</div>





